# .env.example
# Database
DATABASE_URL="postgresql://user:password@localhost:5432/translator_db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# LLM API Keys
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
GOOGLE_AI_API_KEY=""
TOGETHER_API_KEY=""

# Vercel KV (for rate limiting and caching)
KV_URL=""
KV_REST_API_URL=""
KV_REST_API_TOKEN=""
KV_REST_API_READ_ONLY_TOKEN=""

# Stripe (for billing)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_ID_BASIC="price_..."
STRIPE_PRICE_ID_PRO="price_..."
STRIPE_PRICE_ID_ENTERPRISE="price_..."

# Analytics
VERCEL_ANALYTICS_ID=""

# Email (for notifications)
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Feature Flags
ENABLE_OPENAI="true"
ENABLE_ANTHROPIC="true"
ENABLE_GOOGLE="true"
ENABLE_OPENSOURCE="true"

# Rate Limits (requests per hour)
RATE_LIMIT_FREE="10"
RATE_LIMIT_BASIC="100"
RATE_LIMIT_PRO="1000"
RATE_LIMIT_ENTERPRISE="10000"

# Model Limits (max tokens)
MAX_TOKENS_FREE="1000"
MAX_TOKENS_BASIC="2000"
MAX_TOKENS_PRO="4000"
MAX_TOKENS_ENTERPRISE="8000"
